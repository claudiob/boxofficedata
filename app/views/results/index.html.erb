<h1>Listing results</h1>

<table>
  <tr>
    <th>Measurable</th>
    <th>Country</th>
    <th>Period</th>
    <th>Position</th>
    <th>Gross</th>
    <th>Cumulative</th>
    <th>Theaters</th>
    <th>Periods</th>
  </tr>

<% @results.each do |result| %>
  <tr>
    <td><%=h result.measurable_type %>: <%=h result.measurable.name %></td>
    <td><%=h result.country.name %></td>
    <td><%=wts result.period %></td>
    <td><%=h result.position %></td>
    <td><%=h number_to_currency(result.gross, :precision => 0) %></td>
    <td><%=h number_to_currency(result.cumulative, :precision => 0) %></td>
    <td><%=h number_with_delimiter(result.theaters) %></td>
    <td><%=h result.periods %></td>
    <td><%= link_to 'Show', result %></td>
    <td><%= link_to 'Edit', edit_result_path(result) %></td>
    <td><%= link_to 'Destroy', result, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= will_paginate @results %>
